<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackGroundLogin"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="45dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/sclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription=""
            tools:ignore="ContentDescription" />

        <!-- Email Label -->
        <EditText
            android:layout_margin="5dp"
            android:id="@+id/input_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:hint="Username"
            android:textAlignment="center"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:background="@drawable/radius_edittext"
            android:textColor="@color/colorBlack"
            android:textColorHint="@drawable/selector_edittext"
            android:textCursorDrawable="@drawable/cursor_edittext"
            />

        <!-- Password Label -->
        <EditText
            android:layout_margin="5dp"
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textColor="@color/colorBlack"
            android:textColorHint="@drawable/selector_edittext"
            android:background="@drawable/radius_edittext"
            android:textCursorDrawable="@drawable/cursor_edittext"
            />

        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Sign in"
            android:background="@drawable/radius_button"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/link_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="No account yet? Create one"
            android:gravity="center"
            android:textSize="16dip"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>
</ScrollView>
